<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginBottom="70dp">


    <ImageView
        android:id="@+id/slide_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="72dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/slide_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/slide_welcome"
        android:textColor="@color/colorNight"
        android:textSize="19sp" />
    <EditText
        android:id="@+id/slide_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Введите слово"/>

    <Button
        android:id="@+id/slide_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/style_nightblue_button"
        android:text="Отправить"
        android:textColor="@color/colorWhite" />
    <TextView
        android:id="@+id/slide_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пропустить"/>
</LinearLayout>